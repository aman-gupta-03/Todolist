<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/styles.css">
    <title>Document</title>
</head>
<body>
    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>

    <div class="box">

        <% newListItems.forEach(function(newListItem){ %>
        <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="removeItem" value="<%= newListItem._id %>" onchange="this.form.submit()">
                <p><%= newListItem.item %></>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>"></input>

        </form>
        <% }) %>
        <form class="itemSave" action="/" method="post">
            <input type="text" name="newItem" id="item" placeholder="New item" autocomplete="off">
            <button id="submitbtn" type="submit" name="list" value= "<%= listTitle %>">+</button>
        </form>


    </div>

    <% if(listTitle !== "Today"){ %>

    <form action="/deletelist" method="post" class="itemDelete">
        <button type="submit" class="delbtn" name="delbtn" value="<%= listTitle %>">Delete</button>
    </form>

    <% } %>

</body>
</html>